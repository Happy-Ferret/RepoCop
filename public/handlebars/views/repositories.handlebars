<form onsubmit="return false;" class="form-inline tableFilter">
    <div class="form-group">
        <label for=repositoryFilter">Filter&nbsp;</label>
        <input id="repositoryFilter" type="text" class="form-control" placeholder="search text"/>
    </div>    
</form>
<table class="table table-condensed table-hover repositories" data-page-size="18" data-limit-navigation="10" data-filter="#repositoryFilter">
    <thead>
        <th class="repository" data-sort-initial="true">Repository</th>
        <th class="importance">Importance</th>        
        <th class="description">Description</th>
        <th class="lastCommit" data-sort-ignore="false">Last Commit</th>
        <th class="activity" data-sort-ignore="true">Activity</th>
        <th class="language">Language</th>
    </thead>
    <tbody>
        {{#each repositories}}
            <tr>
                <td class="repository">
                    {{#if error}}
                        <i class="fa fa-exclamation-triangle text-danger" title="{{error.message}}"></i>&nbsp;<a href="{{html_url}}" title="{{full_name}}" class="text-danger">{{name}}</a></td>                    
                    {{else}}
                        <i class="fa fa-github" title="github"></i>&nbsp;<a href="{{html_url}}" title="{{full_name}}">{{name}}</a></td>                    
                    {{/if}}
                <td>{{metadata.repoCop.importance}}</td>
                <td>{{metadata.description}}</td>
                <td data-value="{{ activity.0.date }}">{{{ fromNow activity.0.date }}}</td>
                <td>
                    {{#each activity}}
                        {{#if avatar_url}}
                            <a href="{{html_url}}"><img class="avatar" src="{{avatar_url}}" title="{{name}} {{message}} {{{ fromNow date }}}"/></a>
                        {{else}}                   
                            <i class="fa fa-user" title="{{name}} {{message}} {{{ fromNow date }}}"/>
                        {{/if}}
                        <div class='hidden'>{{name}} {{message}}</div>
                    {{/each}}
                </td>
                <td>{{language}}</td>
            </tr>
        {{else}}
            <tr>                
                <td colspan="4">There are no repositories</td>
            </tr>
        {{/each}}        
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-center">
                <ul class="pagination pagination-centered hide-if-no-paging"></ul>
            </td>
        </tr>
    </tfoot>
</table>
